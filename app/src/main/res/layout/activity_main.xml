<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view3"
        android:layout_width="370dp"
        android:layout_height="600dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/postalcode"
        android:paddingLeft="@dimen/horizonta_padding"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_backgroud"
        android:backgroundTint="@color/Gainsboro_60"
        android:ems="10"
        android:hint="@string/pCode"
        android:inputType="textPersonName"
        android:textColorHint="@color/DarkSlateGray_10"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/phonenum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondname" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="295dp"
        android:layout_height="33dp"
        android:gravity="center_horizontal|center_vertical"
        android:outlineProvider="none"
        android:text="@string/pgTitle"
        android:textColor="@color/Gainsboro_60"
        android:textColorHint="@color/Gainsboro_60"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:paddingLeft="@dimen/horizonta_padding"
        android:id="@+id/firstname"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/edittext_backgroud"
        android:backgroundTint="@color/Gainsboro_60"
        android:ems="10"
        android:hint="@string/fName"
        android:inputType="textPersonName"
        android:textColorHint="@color/DarkSlateGray_10"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/secondname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <EditText
        android:paddingLeft="@dimen/horizonta_padding"
        android:id="@+id/secondname"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edittext_backgroud"
        android:backgroundTint="@color/Gainsboro_60"
        android:ems="10"
        android:hint="@string/sName"
        android:inputType="textPersonName"
        android:textColorHint="@color/DarkSlateGray_10"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <EditText
        android:id="@+id/strtaddress"
        android:paddingLeft="@dimen/horizonta_padding"
        android:layout_width="358dp"
        android:layout_height="85dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edittext_backgroud"
        android:backgroundTint="@color/Gainsboro_60"
        android:ems="10"
        android:hint="@string/st"
        android:inputType="textPersonName"
        android:outlineProvider="none"
        android:textColorHint="@color/DarkSlateGray_10"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstname" />

    <EditText
        android:id="@+id/city"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/edittext_backgroud"
        android:backgroundTint="@color/Gainsboro_60"
        android:ems="10"
        android:hint="@string/city"
        android:inputType="textPersonName"
        android:paddingLeft="@dimen/horizonta_padding"
        android:textColorHint="@color/DarkSlateGray_10"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/postalcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/strtaddress" />

    <EditText
        android:id="@+id/phonenum"
        android:paddingLeft="@dimen/horizonta_padding"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_backgroud"
        android:backgroundTint="@color/Gainsboro_60"
        android:ems="10"
        android:hint="@string/pn"
        android:inputType="phone"
        android:textColorHint="@color/DarkSlateGray_10"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city" />

    <EditText
        android:id="@+id/email"
        android:paddingLeft="@dimen/horizonta_padding"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_backgroud"
        android:backgroundTint="@color/Gainsboro_60"
        android:ems="10"
        android:hint="@string/eml"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/DarkSlateGray_10"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phonenum" />

    <EditText
        android:id="@+id/notes"
        android:layout_width="345dp"
        android:layout_height="135dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edittext_backgroud"
        android:backgroundTint="@color/Gainsboro_60"
        android:ems="10"
        android:hint="@string/orNotic"
        android:inputType="textPersonName"
        android:paddingLeft="@dimen/text_box"
        android:textColorHint="@color/DarkSlateGray_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <Button
        android:id="@+id/payButton"
        android:layout_width="157dp"
        android:layout_height="64dp"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="@color/DarkSlateGray_10"
        android:text="@string/nxBtn"
        android:textColor="@color/Gainsboro_60"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notes"
        app:layout_constraintVertical_bias="0.136" />




</androidx.constraintlayout.widget.ConstraintLayout>