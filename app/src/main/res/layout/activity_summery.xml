<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Summery">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="405dp"
        android:layout_height="240dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"


        android:layout_marginBottom="1dp"
        android:background="@drawable/layout_design"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/chose"
            android:textColor="@color/Black_30"
            android:textSize="17sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/payWithCard"
            android:layout_width="313dp"
            android:layout_height="60dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/DarkSlateGray_10"
            android:text="@string/btnCard"
            android:textColor="@color/Gainsboro_60"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="17dp" />

        <Button
            android:id="@+id/cashPayment"
            android:layout_width="314dp"
            android:layout_height="60dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/DarkSlateGray_10"
            android:text="@string/btnCash"
            android:textColor="@color/Gainsboro_60"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="17dp" />
    </LinearLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="76dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/DarkSlateGray_10"
        android:foregroundTint="@color/DarkSlateGray_10"
        android:outlineProvider="none"
        android:text="@string/previBtn"
        android:textAllCaps="false"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="80dp"
        android:text="@string/orSum"
        android:textColor="@color/Gainsboro_60"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="373dp"
        android:layout_height="191dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="00dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="247dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:paddingLeft="@dimen/summery_padding"
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/itmTot"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/DarkSlateGray_10"
                    android:textStyle="bold|italic" />

                <TextView
                    android:paddingLeft="@dimen/summery_padding"
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/dilFee"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/DarkSlateGray_10"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:paddingLeft="@dimen/summery_padding"
                    android:id="@+id/editTextNumberDecimal2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:text="1200.00"
                    android:textSize="24sp"
                    android:textStyle="bold|italic"
                    tools:layout_editor_absoluteX="142dp"
                    tools:layout_editor_absoluteY="101dp" />

                <EditText
                    android:paddingLeft="@dimen/summery_padding"
                    android:id="@+id/editTextNumberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:text="275.00"
                    android:textSize="24sp"
                    android:textStyle="bold|italic"
                    tools:layout_editor_absoluteX="142dp"
                    tools:layout_editor_absoluteY="101dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="144dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginLeft="99dp"
                android:layout_marginTop="36dp"
                android:text="@string/rs"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/DarkSlateGray_10"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toStartOf="@+id/editTextNumberDecimal3"
                app:layout_constraintHorizontal_bias="0.823"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:layout_constraintVertical_bias="0.495" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:paddingLeft="@dimen/summery_padding"
                android:id="@+id/editTextNumberDecimal3"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="44dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="1475.00"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:layout_constraintVertical_bias="0.488" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>